@import '../libs/vars.styl'

.post-details
    // color: #555
    font-size 15px
    max-width 70%
    margin 0 10px
    inline-height 1.8em
    flex 1

    a:not(.nonstyle)
        text-decoration none
        color #3A97FF
        box-shadow 0 1px 0 #555

        &:hover
            box-shadow 0 1px 0 #3A97FF

    .post-title
        margin-bottom 10px

        h1
            // color: #222
            font-size 2.2em
            font-weight 600
            margin-block 0

    .post-meta
        margin-bottom 20px
        font-size 14px
        color #999

    .post-content
        h1:first-child
            display none

        h1
        h2
        h3
        h4
        h5
        h6
            // color: #222
            margin-block 0
            margin-inline 0
            margin-top 20px
            margin-bottom 15px
            line-height 1.2em

        h1
            font-size 1.6em
            font-weight 600

        h2
            font-size 1.5em
            font-weight 600

        h3
            font-size 1.4em

        h4
            font-size 1.3em

        h5
            font-size 1.2em

        h6
            font-size 1.1em

        p
            margin-block 0
            line-height 1.8em

            &:not(:last-child)
                margin 10px 0

        img
            max-width 100%

        blockquote
            padding 15px
            background #eee
            border-radius 5px

        kbd
            padding 1px 3px
            background-color #eee
            box-shadow 1px 2px #999
            border-radius 3px

        mark
        code:not(.hljs)
            padding 1px 3px
            background-color #eee
            border-radius 3px

        table
            text-align left
            border-collapse collapse

        th
        td
            padding 5px
            border 1px solid #eee

        tr:nth-child(even)
            background-color #eee

        th
            font-weight 400
            background-color #ddd

        table
            margin 1em 0
            width 100%




.blog-menu
    max-width 30%

    ol
        list-style-type none

    li
        list-style-type none

    a
        padding 0
        margin 10px 0

.toc
    //max-width 200px
    position sticky
    top 2rem

@media (max-width grid-breakpoints-md)
    .post-details
        max-width 100%

    *
        word-wrap break-word